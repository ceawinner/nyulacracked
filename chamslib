local holder = game.CoreGui:FindFirstChild("ESPHolder") or Instance.new("Folder")
if _G.enabled == false then
    holder:Destroy()
end

if holder.Name == "Folder" then
    holder.Name = "ESPHolder"
    holder.Parent = game.CoreGui
end

if _G.uselocalplayer == false and holder:FindFirstChild(game.Players.LocalPlayer.Name) then
    holder:FindFirstChild(game.Players.LocalPlayer.Name):Destroy()
end

if _G.enabled == true then 
    _G.enabled = false
    _G.enabled = true
end
while _G.enabled do
    task.wait()
    for _,v in pairs(game.Players:GetChildren()) do
        local chr = v.Character
        if chr ~= nil then
        local esp = holder:FindFirstChild(v.Name) or Instance.new("Highlight")
        esp.Name = v.Name
        if _G.uselocalplayer == false and esp.Name == game.Players.LocalPlayer.Name then
            else
        esp.Parent = holder
        if _G.filluseteamcolor then
            esp.FillColor = v.TeamColor.Color
        else
            esp.FillColor = _G.fillcolor 
        end
        if _G.outlineuseteamcolor then
            esp.OutlineColor = v.TeamColor.Color
        else
            esp.OutlineColor = _G.outlinecolor    
        end
        esp.FillTransparency = _G.filltrans
        esp.OutlineTransparency = _G.outlinetrans
        esp.Adornee = chr
        esp.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
        end
        end
    end
end
